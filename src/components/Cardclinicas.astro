---
const { name, address, number } = Astro.props;
---

<div
    class="clinic-card flex items-start gap-4 p-4 hover:bg-gray-50 transition-colors duration-200 border-b border-gray-50"
>
    <div class="bg-[#84b6f4]/10 p-2 rounded-lg flex-shrink-0 mt-1">
        <svg
            class="w-4 h-4 text-[#84b6f4]"
            fill="currentColor"
            viewBox="0 0 20 20"
        >
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
    </div>
    <div class="flex-1 min-w-0">
        <h1 class="font-semibold text-gray-800 mb-1 text-sm leading-snug">
            {name}
        </h1>
        <p class="text-gray-600 text-xs leading-relaxed">{address}</p>
        <p class="text-gray-600 text-xs leading-relaxed">{number}</p>
    </div>
</div>
