<script>
    document.addEventListener("DOMContentLoaded", function () {
        const botones = document.querySelectorAll(".btn-procedimiento");
        const secciones = document.querySelectorAll(".procedimiento-seccion");

        secciones.forEach((sec, i) => sec.classList.toggle("hidden", i !== 0));
        botones.forEach((btn, i) =>
            btn.classList.toggle("bg-blue-400", i === 0),
        );

        botones.forEach((button, index) => {
            button.addEventListener("click", () => {
                secciones.forEach((sec, i) =>
                    sec.classList.toggle("hidden", i !== index),
                );
                botones.forEach((btn, i) =>
                    btn.classList.toggle("bg-blue-200", i === index),
                );
            });
        });

        const carousel = document.getElementById("carousel");
        //@ts-ignore
        document.getElementById("btn-left").addEventListener("click", () => {
            //@ts-ignore
            carousel.scrollBy({ left: -150, behavior: "smooth" });
        });
        //@ts-ignore
        document.getElementById("btn-right").addEventListener("click", () => {
            //@ts-ignore
            carousel.scrollBy({ left: 150, behavior: "smooth" });
        });
    });
</script>
