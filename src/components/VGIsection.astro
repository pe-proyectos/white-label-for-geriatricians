---
import VGIcard from "../components/VGIcard.astro";
---

<section id="vgi" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Valoración Geriátrica <span class="text-navy">Integral</span> (VGI)
            </h2>
            <div class="h-1 w-20 bg-navy mx-auto mb-6"></div>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Evaluación multidimensional integral que considera variables
                clínicas, funcionales, cognitivas, emocionales y sociales
            </p>
        </div>

        <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
            <VGIcard
                title="1. Valoracion Funcional"
                details={[
                    "Actividades Básicas (Índice de Katz, Barthel)",
                    "Actividades Instrumentales (Lawton y Brody)",
                    "Nivel de dependencia (Independiente a Total)",
                ]}
                icon="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                colorFrom="blue-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="2. Valoracion mental"
                details={[
                    "Test del Reloj, Escala de Pfeiffer",
                    "Mini Mental, TEST DE MOCA",
                    "Normal a Demencia",
                ]}
                icon="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                colorFrom="green-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="3. Valoración Social"
                details={[
                    "Red de apoyo familiar",
                    "Recursos sociales",
                    "Ambiente domiciliario",
                ]}
                icon="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                colorFrom="purple-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="4. Valoración nutricional"
                details={[
                    "Mini Nutritional Assessment",
                    "Estado nutricional",
                    "Delgadez a Obesidad",
                ]}
                icon="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                colorFrom="orange-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="5. Valoración de Fragilidad"
                details={[
                    "Escala de Frail, Fenotipo de Fried",
                    "Escala de Fragilidad Clínica (CFS)",
                    "Robusto, Pre-frágil, Frágil",
                ]}
                icon="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                colorFrom="red-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="6. Valoración Afectiva"
                details={[
                    "Escala de Yesavage (Depresión)",
                    "Escala de Goldberg, Hamilton (Ansiedad)",
                    "Evaluación psicológica integral",
                ]}
                icon="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                colorFrom="pink-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <div class="max-w-7xl mx-auto xbg-[#84b6f4] rounded-2xl p-8 text-white text-center  md:grid-cols-1 lg:w-305">
                <h3 class="text-2xl font-bold mb-4">
                    ¿Necesitas una Valoración Geriátrica Integral?
                </h3>
                <p class="mb-6 text-blue-100">
                    Obtén una evaluación completa y personalizada para optimizar
                    tu salud y calidad de vida
                </p>
                <a
                    href="#formulario"
                    class="bg-white text-[#84b6f4] px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition duration-300 inline-block"
                >
                    Solicitar VGI
                </a>
            </div>
        </div>
    </div>
</section>
