---
import VGIcard from "../components/VGIcard.astro";
---

<section id="vgi" class="py-10 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Valoración Geriátrica <span class="text-[#84b6f4]">Integral</span> (VGI)
            </h2>
            <div class="h-1 w-20 bg-[#84b6f4] mx-auto mb-6"></div>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Evaluación multidimensional integral que considera variables
                clínicas, funcionales, cognitivas, emocionales y sociales
            </p>
        </div>

        <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
            <VGIcard
                title="1. Valoracion Funcional"
                importantIndex={2}
                details={[
                    "Actividades Básicas (Índice de Katz, Barthel)",
                    "Actividades Instrumentales (Lawton y Brody)",
                    "Nivel de dependencia (Independiente a Dependencia Total)",
                ]}
                icon="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                colorFrom="blue-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="2. Valoracion mental"
                importantIndex={2}
                details={[
                    "Test del Reloj, Escala de Pfeiffer",
                    "Mini Mental, TEST DE MOCA",
                    "Normal a Demencia",
                ]}
                icon="M12 18.5A2.493 2.493 0 0 1 7.51 20H7.5a2.468 2.468 0 0 1-2.4-3.154 2.98 2.98 0 0 1-.85-5.274 2.468 2.468 0 0 1 .92-3.182 2.477 2.477 0 0 1 1.876-3.344 2.5 2.5 0 0 1 3.41-1.856A2.5 2.5 0 0 1 12 5.5m0 13v-13m0 13a2.493 2.493 0 0 0 4.49 1.5h.01a2.468 2.468 0 0 0 2.403-3.154 2.98 2.98 0 0 0 .847-5.274 2.468 2.468 0 0 0-.921-3.182 2.477 2.477 0 0 0-1.875-3.344A2.5 2.5 0 0 0 14.5 3 2.5 2.5 0 0 0 12 5.5m-8 5a2.5 2.5 0 0 1 3.48-2.3m-.28 8.551a3 3 0 0 1-2.953-5.185M20 10.5a2.5 2.5 0 0 0-3.481-2.3m.28 8.551a3 3 0 0 0 2.954-5.185"
                colorFrom="green-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="3. Valoración Social"
                details={[
                    "Red de apoyo familiar",
                    "Recursos sociales",
                    "Ambiente domiciliario",
                ]}
                icon="M4.5 17H4a1 1 0 0 1-1-1 3 3 0 0 1 3-3h1m0-3.05A2.5 2.5 0 1 1 9 5.5M19.5 17h.5a1 1 0 0 0 1-1 3 3 0 0 0-3-3h-1m0-3.05a2.5 2.5 0 1 0-2-4.45m.5 13.5h-7a1 1 0 0 1-1-1 3 3 0 0 1 3-3h3a3 3 0 0 1 3 3 1 1 0 0 1-1 1Zm-1-9.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Z"
                colorFrom="purple-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="4. Valoración nutricional"
                importantIndex={2}
                details={[
                    "Mini Nutritional Assessment",
                    "Estado nutricional",
                    "Delgadez a Obesidad",
                ]}
                icon="M12 10.0419c-1.3902 0-1.3935-1.1249-4.20643-1.037-1.73056.05408-3.15551 2.2303-2.71168 5.3081C5.35949 16.2381 6.98619 21 8.99172 21c2.00548 0 2.07358-.8508 3.00828-.8508.9347 0 .8551.8508 3.0083.8508s3.6322-4.7619 3.9098-6.687c.4438-3.0778-.9811-5.25402-2.7117-5.3081-2.8129-.0879-2.8162 1.037-4.2064 1.037Zm2.3598-4.2126c-.8779.74829-1.8612.71957-2.7221.71957 0-.62576.0792-1.94012.8609-2.76911.7817-.82898 2.1271-.7664 2.6434-.7664 0 .59448.0956 2.06766-.7822 2.81594Z"
                colorFrom="orange-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="5. Valoración de Fragilidad"
                importantIndex={2}
                details={[
                    "Escala de Frail, Fenotipo de Fried",
                    "Escala de Fragilidad Clínica (CFS)",
                    "Robusto, Pre-frágil, Frágil",
                ]}
                icon="M16.8879 7.11205c.1788-.77492-.1192-1.66905-.7153-2.26515-1.0133-1.01335-2.5632-1.01335-3.5765 0-1.0134 1.01336-1.0134 2.5632 0 3.57655L8.42342 12.5961c-1.01336-1.0134-2.5632-1.0134-3.57655 0-1.01336 1.0133-1.01336 2.5632 0 3.5765.59609.5961 1.49023.8942 2.26515.7154-.17883.7749.11921 1.669.71531 2.2651 1.01335 1.0134 2.56317 1.0134 3.57657 0 1.0133-1.0134 1.0133-2.5632 0-3.5765l4.1726-4.1727c1.0134 1.0134 2.5632 1.0134 3.5766 0 1.0133-1.0133 1.0133-2.56318 0-3.57654-.5961-.59609-1.4903-.89414-2.2652-.71531Z"
                colorFrom="red-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <VGIcard
                title="6. Valoración Afectiva"
                details={[
                    "Escala de Yesavage (Depresión)",
                    "Escala de Goldberg, Hamilton (Ansiedad)",
                    "Evaluación psicológica integral",
                ]}
                icon="M14.99 9H15M8.99 9H9m12 3a9 9 0 1 1-18 0 9 9 0 0 1 18 0ZM7 13c0 1 .507 2.397 1.494 3.216a5.5 5.5 0 0 0 7.022 0C16.503 15.397 17 14 17 13c0 0-1.99 1-4.995 1S7 13 7 13Z"
                colorFrom="pink-50"
                colorTo="white"
                color="#84b6f4"
                colorText="gray-700"
            />
            <div class="max-w-7xl mx-auto bg-[#84b6f4] rounded-2xl p-8 text-white text-center md:w-305">
                <h3 class="text-2xl font-bold mb-4">
                    ¿Necesitas una Valoración Geriátrica Integral?
                </h3>
                <p class="mb-6 text-blue-100">
                    Obtén una evaluación completa y personalizada para optimizar
                    tu salud y calidad de vida
                </p>
                <a
                    href="#form"
                    class="bg-white text-[#84b6f4] px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition duration-300 inline-block"
                >
                    Solicitar VGI
                </a>
            </div>
        </div>
    </div>
</section>
