---
const { title, details } = Astro.props;
---

<div class="bg-gradient-to-br from-blue-50 to-white p-6 rounded-xl shadow-md">
    <div
        class="w-12 h-12 bg-navy rounded-lg flex items-center justify-center mb-4"
    >
        <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
    </div>
    <h3 class="text-lg font-bold text-navy mb-3">{title}</h3>
    <ul class="text-gray-700 text-sm space-y-1 list-disc list-inside">
        {details.map((detalle: string) => <li>{detalle}</li>)}
    </ul>
</div>
